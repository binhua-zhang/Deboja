.ques-wrapper{
	padding: 30rpx;
	background-color: #fff;
	margin-bottom: 30rpx;
}
.ques-info{
	display: flex;
	justify-content: space-between;
	flex-direction: row;
	align-items: center;
}
.ques-info image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.ques-sec{
	margin-left: 20rpx;
	flex: 1;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.ques-user{
	color: #bbb;

}
.ques-cost{
	color: #f85f48;
}
.ques-title{
	padding: 10rpx 0 10rpx 40rpx;
	font-size: 28rpx;
}
.ques-content{
	padding: 10rpx 0 30rpx 40rpx;
	font-size: 25rpx;
}
.ans-wrapper{
	align-items: center;
	background-color: #fff;
	padding: 30rpx;
	margin-bottom: 110rpx;
}
.ans-wrapper image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.ans-voice{
	margin: 0 20rpx 0 40rpx;
	padding: 20rpx 100rpx;
	color: #fff;
	border-radius: 50rpx;
	background-color: #1dcda6;
}
.ans-time{
	color: #ccc;
}
.ans-info{
	display: flex;
	justify-content: space-between;
	flex-direction: row;
	align-items: center;
	color: #aaa;
	padding: 10rpx 0 5rpx 40rpx;
	font-size: 25rpx;
}
.master-info{
	display: flex;
	justify-content: space-between;
	flex-direction: row;
	align-items: center;
	padding: 30rpx 0 5rpx 20rpx;
	background-color: #fff;
	margin-top: 30rpx;
	padding-top: 20rpx;
	border-top: 1px solid #eee;
}
.master-info image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}
.master-brief{
	height: 120rpx;
	padding-left: 40rpx;
	flex: 1;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
	align-items: flex-start;
}
.master-user{
	font-size: 30rpx;
	letter-spacing: 1px;
}
.master-intro {
	color: #888;
	width: 300rpx;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.master-fans{
	color: #888;
}
.master-follow{
	color: #ddd;
	width: 80rpx;
	padding: 10rpx;
	border-radius: 50rpx;
	background-color: #999;
	text-align: center;
}
.rep-wrapper {
 	align-items: center;
	background-color: #fff;
	position: fixed;
	bottom: 0;
	width: 100%;
	border-radius: 0rpx
}
.submit{
	background-color: #f75f48;
	color: #fff
}
